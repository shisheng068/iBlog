	.my-pagination
    {
        padding-left: 0;
		margin: 1.5rem 0;
		list-style: none;
		color: #999;
		text-align: left;
		position: relative;
    }
    
    .my-pagination>li 
    {
		display: inline-block;
	}
	
	.my-pagination>.am-disabled>a,
	.my-pagination>.am-disabled>a:focus, 
	.my-pagination>.am-disabled>a:hover, 
	.my-pagination>.am-disabled>span, 
	.my-pagination>.am-disabled>span:focus, 
	.my-pagination>.am-disabled>span:hover 
	{
		color: #999;
		background-color: #fff;
		border-color: #ddd;
		cursor: not-allowed;
		pointer-events: none;
	}
	
	.my-pagination>li>a, 
	.my-pagination>li>span
	{
		position: relative;
		display: block;
		padding: .5em 1em;
		text-decoration: none;
		line-height: 1.2;
		background-color: #fff;
		border: 1px solid #ddd;
		border-radius: 0;
		margin-bottom: 5px;
		margin-right: 5px;
	}
	.my-pagination>li>div
	{
		position: relative;
		display: block;
		padding: 0px;
		top:-3px;
		text-decoration: none;
		line-height: 1.2;
		background-color: #fff;
		border: 1px solid #ddd;
		border-radius: 0;
		margin-bottom: 5px;
		margin-right: 5px;
	}